<h1> <%= @routine.name %></h1>
   <h3> <%= @routine.description%> </h3>
    <% @routine.products.each do |product| %>
      <li><a href= "/products/<%= product.id %>"><%= product.name %></a></li>
    <% end %>
    <br>
<a href = "/routines/<%= @routine.id %>/edit">Edit</a>
<a href = "/products/new">Add Product</a>
