<h1> <%= @routine.name %></h1>
   <h3> <%= @routine.description%> </h3>

   <div>
    <% @routine.products.each do |product| %>
      <li><a href= "/products/<%= product.id %>"><%= product.name %></a></li>
    <% end %>
   </div>
   
    <br>

 <form method ="get" action="/routines/<%= @routine.id %>/edit">
   <input type="submit" value="Edit This Routine">
</form>
   <br>
 <form method ="get" action="/routines/<%= @routine.id %>/products/new">
   <input type="submit" value="Add a Product">
</form>
   <br>
<form method ="post" action="/routines/<%= @routine.id %>">
   <input id="hidden" type="hidden" name="_method" value="delete">
   <input type="submit" onclick="return confirm('Are you sure you want to delete this routine? This can\'t be undone!');"  value="Delete">
</form>